{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "exclude": ["node_modules", "dist"]
}