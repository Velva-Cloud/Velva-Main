# Development (local) environment

# MySQL connection (Prisma)
DATABASE_URL="mysql://panel:panel@localhost:3306/panel"

# JWT
JWT_SECRET="dev_change_me"
JWT_EXPIRES_IN="7d"

# Frontend URL for CORS and OAuth redirect after token issuance
FRONTEND_URL="http://localhost:3000"

# Password reset token expiry (in hours)
RESET_TOKEN_EXPIRES_HOURS=2

# OAuth (Google)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:4000/api/auth/google/callback"

# OAuth (Discord)
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
DISCORD_CALLBACK_URL="http://localhost:4000/api/auth/discord/callback"

# Agent auto-registration (set a dev secret)
NODE_REGISTRATION_SECRET="dev_join_secret"

# PKI (leave empty in dev to auto-generate a CA)
CA_KEY_PATH=""
CA_CERT_PATH=""

# Panel -> daemon mTLS (optional in dev; per-node apiUrl is used if set)
DAEMON_URL=""
DAEMON_CA=""
DAEMON_CLIENT_CERT=""
DAEMON_CLIENT_KEY=""