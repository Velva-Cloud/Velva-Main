# Production environment

# MySQL connection (Prisma)
# Example (set actual credentials/host):
# DATABASE_URL="mysql://user:password@db-host:3306/panel"
DATABASE_URL=""

# JWT
JWT_SECRET="set_a_strong_secret_in_prod"
JWT_EXPIRES_IN="7d"

# Frontend URL for CORS and OAuth redirect after token issuance
FRONTEND_URL="https://panel.velvacloud.com"

# Password reset token expiry (in hours)
RESET_TOKEN_EXPIRES_HOURS=2

# OAuth (Google)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="https://panel.velvacloud.com/api/auth/google/callback"

# OAuth (Discord)
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
DISCORD_CALLBACK_URL="https://panel.velvacloud.com/api/auth/discord/callback"

# Agent auto-registration (set a strong secret)
NODE_REGISTRATION_SECRET=""

# PKI (CA used to sign node certificates). Provide absolute file paths in production.
CA_KEY_PATH=""
CA_CERT_PATH=""

# Optional global daemon config (panel -> daemon mTLS). Per-node apiUrl is used if set.
